---
import BreadCrumbs from "../../components/BreadCrumbs";
import Catchphrase from "../../components/Catchphrase.astro";
import Container from "../../components/Container.astro";
import Hero from "../../components/Hero.astro";
import Search from "../../components/Search";
import Layout from "../../layouts/Layout.astro";
import ConceptList from "../../modules/concepts/components/ConceptList.astro";

const mainId = "home-root";
const title = "Tous les concepts";
---

<Layout title={title}>
  <main aria-labelledby={mainId}>
    <div class="hero-background">
      <Container>
        <BreadCrumbs
          crumbs={[
            { label: "Accueil", href: "/" },
            { label: "Concepts", href: "/concepts" },
          ]}
        />
        <Hero id={mainId} title={title}>
          <Catchphrase>
            N'hésitez pas à demander des explications sur un sujet en
            particulier s'il n'est pas dans la liste ci-dessous.
          </Catchphrase>
        </Hero>
      </Container>
    </div>

    <Container>
      <div class="pt-12 pb-8">
        <Search />
      </div>
      <ConceptList />
    </Container>

    <div class="h-12"></div>
  </main>
</Layout>
